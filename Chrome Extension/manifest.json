{
  "name": "SpoilerFree",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "BoilerMake VIII Submission",
  "homepage_url": "http://github.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.js",
      "js/netflix.js",
      "js/imdb.js",
      "js/spoilerfilter.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://www.omdbapi.com/",
    "webNavigation",
    "https://www.netflix.com"
  ],
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_title": "SpoilerFree"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "src/inject/inject.js"
      ]
    }
  ]
}